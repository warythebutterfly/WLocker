<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $("#delbtn").click(function () {
        var id = $("#hidden").val()

        $.ajax({
            async: false,
            cache: false,
            type: "POST",
            url: '/Items/Delete',
            data: {
                "id": id




            },
            success: function (data) {


                alert(data);
                window.location.href = "/Items/Item";
            },

            error: function (x, e) { }



        })
    })
</script>