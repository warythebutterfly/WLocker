@model OnlineStore.Models.ViewModel
<!-- Title Page -->

<title>Wlocker | Cart</title>
<section class="bg-title-page p-t-40 p-b-50 flex-col-c-m" style="background-image: url(/Content/images/slidee1.jpg);">
    <h2 class="l-text2 t-center">
        Cart
    </h2>
</section>

<!-- Cart -->
<section class="cart bgwhite p-t-70 p-b-100">
    <div id="refreshCartTable" class="container">
        <!-- Cart item -->
        <div  class="container-table-cart pos-relative">
            <div  class="wrap-table-shopping-cart bgwhite">
                <table class="table-shopping-cart">
                    <tr class="table-head">
                        <th class="column-1"></th>
                        <th class="column-2">Product</th>
                        <th class="column-3">Unit Price</th>
                        <th class="column-4">Quantity</th>
                        <th class="column-5">Subtotal</th>
                    </tr>

                    @if (Model.CartItems != null)
                    {
                        foreach (var item in Model.CartItems)
                        {
                            <tr class="table-row">
                                <td class="column-1">
                                    <div class="cart-img-product b-rad-4 o-f-hidden">
                                        <img src="@item.ImageURL" alt="IMG-PRODUCT">
                                        <br />
                                        @*<a href="#"><p style="font-size:small"; font-family:'Yu Gothic'><i class="fa fa-xing-square"></i> Remove</p></a>*@
                                    </div>
                                </td>
                                <td class="column-2"><a href="/Home/ProductDetail/@item.ID">@item.Name</a></td>
                                <td class="column-3"> ₦@Model.FormattedAmount(item.Price)</td>
                                <td class="column-4 text-center">

                                    <select id="quantity" onchange="updateCart(@item.ID, @item.Quantity);" class="form-control" style="width:auto">
                                        @{
                                            int i = 1;
                                            while (i < 11)
                                            {
                                                if (item.Quantity == i)
                                                {
                                                    <option selected value="@i">@i</option>
                                                }
                                                else
                                                {
                                                    <option value="@i">@i</option>
                                                }
                                                i++;
                                            }
                                        }

                                    </select>
                                    @*<div class="flex-w bo5 of-hidden w-size17">
                                            <button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                                                <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                                            </button>

                                            <input class="size8 m-text18 t-center num-product" type="number" name="num-product1" value="1">

                                            <button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
                                                <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                                            </button>
                                        </div>*@
                                    @*var num = (@item.Quantity * @item.Price)*@
                                </td>
                                <td class="column-5"> ₦@Model.FormattedAmount(item.Price * item.Quantity)</td>
                                <td class="column-5"><button class="btn" style="border:thick; color:red" onclick="removeFromCart(@item.ID)">Remove</button></td>
                            </tr>

                        }
                    }

                </table>
            </div>
        </div>

        <div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
            <div class="flex-w flex-m w-full-sm " style="float:right">
                <div class="size11 bo4 m-r-10">
                    <input class="sizefull s-text7 p-l-22 p-r-22" type="text" name="coupon-code" placeholder="Coupon Code">
                </div>

                <div class="size12 trans-0-4 m-t-10 m-b-10 m-r-10">
                    <!-- Button -->
                    <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4 ">
                        Apply coupon
                    </button>
                </div>
            </div>

            <div class="size10 trans-0-4 m-t-10 m-b-10">
                <!-- Button -->
                <button id="update" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                    Update Cart
                </button>
            </div>
        </div>

        <!-- Total -->
        <div class="bo9 w-size18 p-l-40 p-r-40 p-t-30 p-b-38 m-t-30 m-r-0 m-l-auto p-lr-15-sm">
            <h5 class="m-text20 p-b-24">
                Cart Totals
            </h5>

            <!--  -->
            <div class="flex-w flex-sb-m p-b-12">
                <span class="s-text18 w-size19 w-full-sm">
                    Subtotal:
                </span>

                <span class="m-text21 w-size20 w-full-sm">
                    ₦@Model.FormattedAmount(Model.total)
                </span>
            </div>

            <!--  -->
            <div class="flex-w flex-sb bo10 p-t-15 p-b-20">
                <span class="s-text18 w-size19 w-full-sm">
                    Shipping:
                </span>

                <div class="w-size20 w-full-sm">
                    <p class="s-text8 p-b-23">
                        There are no shipping methods available. Please double check your address, or contact us if you need any help.
                    </p>

                    <span class="s-text19">
                        Calculate Shipping
                    </span>
                    <br />

                    @*<div class="rs2-select2 rs3-select2 rs4-select2 bo4 of-hidden w-size21 m-t-8 m-b-12">
                            <select class="selection-2" name="country">
                                <option>Select a country...</option>
                                <option>US</option>
                                <option>UK</option>
                                <option>Japan</option>
                            </select>
                        </div>*@

                    <div class="size13 bo4 m-b-12">
                        <input class="sizefull s-text7 p-l-15 p-r-15" type="text" name="state" placeholder="State">
                    </div>

                    <div class="size13 bo4 m-b-22">
                        <input class="sizefull s-text7 p-l-15 p-r-15" type="text" name="postcode" placeholder="Address">
                    </div>

                    <div class="size14 trans-0-4 m-b-10">
                        <!-- Button -->
                        <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                            Update Totals
                        </button>
                    </div>
                </div>
            </div>

            <!--  -->
            <div class="flex-w flex-sb-m p-t-26 p-b-30">
                <span class="m-text22 w-size19 w-full-sm">
                    Total:
                </span>

                <span class="m-text21 w-size20 w-full-sm">
                    ₦@Model.FormattedAmount(Model.total)
                </span>
            </div>

            <div class="size15 trans-0-4">
                <!-- Button -->
                <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                    Proceed to Checkout
                </button>
            </div>
        </div>
    </div>
</section>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>

    var num = "";



    function removeFromCart(id) {

        $.ajax({
            async: false,
            cache: false,
            type: "POST",
            url: '/Cart/Remove',
            data: {
                "cartId": id,
                //"quantity": num

            },
            success: function (response) {
                console.log(response)
                if (response == "0") {
                    swal("An error occurred", "", "error");
                }
                else {
                    swal(response, "is removed from cart !", "success");
                }

                getCart();
                refreshCartPage();
                //alert("hmmm");
                //window.location.href = "/Home/Cart";
            },

            error: function (x, e) { }



        })
    }
    function refreshCartPage() {
        //$("refreshCartTable").load();
        $("#refreshCartTable").load(window.location.href + "#refreshCartTable");
    }

    function updateCart(id) {

        const selectElement = document.querySelector('#quantity');

        selectElement.addEventListener('change', (event) => {

            num = event.target.value;

            console.log(num);

        });
        //num = quantity;

        $.ajax({
            async: false,
            cache: false,
            type: "POST",
            url: '/Cart/Update',
            data: {
                "cartId": id,
                "quantity": num

            },
            success: function (response) {
                console.log(response)
                if (response == "0") {
                    swal("An error occurred", "", "error");
                }
                else {

                    //$("#update").click(function () {
                        swal("your cart has been updated !")
                    //})
                }

                getCart();
                refreshCartPage();
                //alert("hmmm");
                //window.location.href = "/Home/Cart";
            },

            error: function (x, e) { }



        })

    }




